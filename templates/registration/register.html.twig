{% extends 'base.html.twig' %}

{% block title %}Inscription - D√®m√® Travel{% endblock %}

{% block stylesheets %}
<style>
    .register-container {
        max-width: 500px;
        margin: 4rem auto;
        padding: 2rem;
        background: white;
        border-radius: 1rem;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    }

    .register-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .register-header h1 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .register-header p {
        color: var(--color-gray);
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .form-actions {
        text-align: center;
        margin-top: 2rem;
    }

    .form-actions .btn {
        width: 100%;
        margin-bottom: 1rem;
    }

    .login-link {
        text-align: center;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #e5e7eb;
    }

    .login-link a {
        color: var(--color-primary);
        text-decoration: none;
        font-weight: 600;
    }

    .login-link a:hover {
        color: var(--color-secondary);
    }

    .required {
        color: #dc2626;
    }
</style>
{% endblock %}

{% block body %}
<div class="register-container">
    <div class="register-header">
        <h1>üïå Inscription</h1>
        <p>Cr√©ez votre compte pour r√©server votre p√®lerinage</p>
    </div>

    <form method="post">
        <div class="form-row">
            <div class="form-group">
                <label class="form-label" for="nom">Nom <span class="required">*</span></label>
                <input type="text" 
                       name="nom" 
                       id="nom" 
                       class="form-control" 
                       value="{{ user.nom ?? '' }}"
                       required
                       placeholder="Votre nom">
            </div>

            <div class="form-group">
                <label class="form-label" for="prenom">Pr√©nom <span class="required">*</span></label>
                <input type="text" 
                       name="prenom" 
                       id="prenom" 
                       class="form-control" 
                       value="{{ user.prenom ?? '' }}"
                       required
                       placeholder="Votre pr√©nom">
            </div>
        </div>

        <div class="form-group">
            <label class="form-label" for="email">Email <span class="required">*</span></label>
            <input type="email" 
                   name="email" 
                   id="email" 
                   class="form-control" 
                   value="{{ user.email ?? '' }}"
                   required
                   placeholder="votre@email.com">
        </div>

        <div class="form-row">
            <div class="form-group">
                <label class="form-label" for="phone">T√©l√©phone</label>
                <input type="tel" 
                       name="phone" 
                       id="phone" 
                       class="form-control" 
                       value="{{ user.phone ?? '' }}"
                       placeholder="+223 XX XX XX XX">
            </div>

            <div class="form-group">
                <label class="form-label" for="pays">Pays</label>
                <select name="pays" id="pays" class="form-control">
                    <option value="">S√©lectionner un pays</option>
                    <option value="Mali" {{ user.pays == 'Mali' ? 'selected' : '' }}>Mali</option>
                    <option value="S√©n√©gal" {{ user.pays == 'S√©n√©gal' ? 'selected' : '' }}>S√©n√©gal</option>
                    <option value="C√¥te d'Ivoire" {{ user.pays == "C√¥te d'Ivoire" ? 'selected' : '' }}>C√¥te d'Ivoire</option>
                    <option value="Burkina Faso" {{ user.pays == 'Burkina Faso' ? 'selected' : '' }}>Burkina Faso</option>
                    <option value="Niger" {{ user.pays == 'Niger' ? 'selected' : '' }}>Niger</option>
                    <option value="Guin√©e" {{ user.pays == 'Guin√©e' ? 'selected' : '' }}>Guin√©e</option>
                    <option value="France" {{ user.pays == 'France' ? 'selected' : '' }}>France</option>
                    <option value="Autre" {{ user.pays == 'Autre' ? 'selected' : '' }}>Autre</option>
                </select>
