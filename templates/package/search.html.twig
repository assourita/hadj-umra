{% extends 'base.html.twig' %}

{% block title %}Recherche - D√®m√® Travel{% endblock %}

{% block body %}
<div class="search-page">
    <div class="page-header">
        <h1>üîç Recherche de packages</h1>
        <p>Trouvez le voyage spirituel parfait</p>
    </div>

    <!-- Formulaire de recherche -->
    <div class="search-section">
        <form method="GET" class="search-form">
            <div class="search-input-group">
                <input type="text" 
                       name="q" 
                       value="{{ search_term }}" 
                       placeholder="Rechercher un package (ex: Makkah, Umra, visa...)"
                       class="search-input"
                       required>
                <button type="submit" class="search-btn">
                    üîç Rechercher
                </button>
            </div>
            <p class="search-help">Tapez au moins 3 caract√®res pour lancer la recherche</p>
        </form>
    </div>

    <!-- R√©sultats de recherche -->
    <div class="results-section">
        {% if search_term %}
            {% if search_term|length < 3 %}
                <div class="search-message">
                    <h3>‚ö†Ô∏è Terme de recherche trop court</h3>
                    <p>Veuillez saisir au moins 3 caract√®res pour effectuer une recherche.</p>
                </div>
            {% elseif packages is empty %}
                <div class="search-message">
                    <h3>üèúÔ∏è Aucun r√©sultat trouv√©</h3>
                    <p>Aucun package ne correspond √† votre recherche "<strong>{{ search_term }}</strong>".</p>
                    <div class="search-suggestions">
                        <h4>Suggestions :</h4>
                        <ul>
                            <li>V√©rifiez l'orthographe de votre recherche</li>
                            <li>Essayez des mots-cl√©s plus g√©n√©raux</li>
                            <li>Recherchez par ville (Makkah, Madinah)</li>
                            <li>Recherchez par type (Umra, Hadj)</li>
                        </ul>
                        <a href="{{ path('app_packages_index') }}" class="btn btn-secondary">
                            Voir tous les packages
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="results-header">
                    <h2>R√©sultats pour "{{ search_term }}"</h2>
                    <p>{{ packages|length }} package(s) trouv√©(s)</p>
                </div>

                <div class="packages-grid">
                    {% for package in packages %}
                        <div class="package-card">
                            <div class="package-image">
                                {% if package.images and package.images|length > 0 %}
                                    <img src="{{ package.images[0] }}?v={{ "now"|date("U") }}" alt="{{ package.titre }}">
                                {% else %}
                                    <div class="package-placeholder">
                                        üïå
                                    </div>
                                {% endif %}
                                <div class="package-duration">
                                    {{ package.dureeJours }} jours
                                </div>
                            </div>
                            
                            <div class="package-content">
                                <h3 class="package-title">{{ package.titre }}</h3>
                                <p class="package-description">
                                    {{ package.description|length > 120 ? package.description|slice(0, 120) ~ '...' : package.description }}
                                </p>
                                
                                <div class="package-highlights">
                                    {% if package.hotelMakkah %}
                                        <div class="highlight">
                                            üè® <strong>Makkah:</strong> {{ package.hotelMakkah }}
                                        </div>
                                    {% endif %}
                                    {% if package.hotelMadinah %}
                                        <div class="highlight">
                                            üè® <strong>Madinah:</strong> {{ package.hotelMadinah }}
                                        </div>
                                    {% endif %}
                                </div>
                                
                                {% if package.prixBase %}
                                    <div class="package-price">
                                        <span class="price-label">√Ä partir de</span>
                                        <span class="price-amount">{{ package.prixBase|number_format(0, ',', ' ') }}</span>
                                        <span class="price-currency">{{ package.devise|default('XOF') }}</span>
                                    </div>
                                {% endif %}
                            </div>
                            
                            <div class="package-actions">
                                <a href="{{ path('app_package_show', {'slug': package.slug}) }}" 
                                   class="btn btn-primary">
                                    Voir les d√©tails
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        {% else %}
            <div class="search-welcome">
                <div class="welcome-icon">üïå</div>
                <h3>Bienvenue dans la recherche</h3>
                <p>Utilisez le formulaire ci-dessus pour rechercher parmi nos packages de p√®lerinage.</p>
                <div class="search-examples">
                    <h4>Exemples de recherche :</h4>
                    <div class="examples-grid">
                        <span class="example-tag">Umra √©conomique</span>
                        <span class="example-tag">Visa inclus</span>
                        <span class="example-tag">15 jours</span>
                        <span class="example-tag">Makkah</span>
                    </div>
                </div>
                <a href="{{ path('app_packages_index') }}" class="btn btn-secondary">
                    Parcourir tous les packages
                </a>
            </div>
        {% endif %}
    </div>
</div>

<style>
.search-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
}

.page-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    border-radius: 1rem;
}

.page-header h1 {
    margin: 0 0 0.5rem 0;
    font-size: 2.5rem;
}

.search-section {
    background: white;
    margin-bottom: 3rem;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    text-align: center;
}

.search-input-group {
    display: flex;
    max-width: 600px;
    margin: 0 auto 1rem;
    gap: 0.5rem;
}

.search-input {
    flex: 1;
    padding: 1rem;
    border: 2px solid #e2e8f0;
    border-radius: 0.5rem;
    font-size: 1rem;
    transition: border-color 0.3s ease;
}

.search-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(139, 69, 19, 0.1);
}

.search-btn {
    padding: 1rem 2rem;
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.search-btn:hover {
    background: var(--color-secondary);
}

.search-help {
    margin: 0;
    color: var(--color-gray);
    font-size: 0.875rem;
}

.search-message {
    text-align: center;
    padding: 3rem 2rem;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.search-message h3 {
    margin: 0 0 1rem 0;
    color: var(--color-primary);
}

.search-message p {
    margin: 0 0 2rem 0;
    color: var(--color-gray);
}

.search-suggestions {
    text-align: left;
    max-width: 400px;
    margin: 0 auto;
}

.search-suggestions h4 {
    margin: 0 0 1rem 0;
    color: var(--color-primary);
}

.search-suggestions ul {
    margin: 0 0 2rem 0;
    padding-left: 1.5rem;
    color: var(--color-gray);
}

.search-suggestions li {
    margin-bottom: 0.5rem;
}

.search-welcome {
    text-align: center;
    padding: 4rem 2rem;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.welcome-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
}

.search-welcome h3 {
    margin: 0 0 1rem 0;
    color: var(--color-primary);
}

.search-welcome p {
    margin: 0 0 2rem 0;
    color: var(--color-gray);
}

.search-examples {
    margin-bottom: 2rem;
}

.search-examples h4 {
    margin: 0 0 1rem 0;
    color: var(--color-primary);
}

.examples-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
}

.example-tag {
    background: #f8fafc;
    color: var(--color-primary);
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    border: 1px solid #e2e8f0;
}

.results-header {
    margin-bottom: 2rem;
    text-align: center;
}

.results-header h2 {
    margin: 0 0 0.5rem 0;
    color: var(--color-primary);
}

.results-header p {
    margin: 0;
    color: var(--color-gray);
}

.packages-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
}

.package-card {
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.package-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 40px rgba(0,0,0,0.15);
}

.package-image {
    position: relative;
    height: 180px;
    overflow: hidden;
}

.package-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.package-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    font-size: 3rem;
}

.package-duration {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(0,0,0,0.8);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 600;
}

.package-content {
    padding: 1.5rem;
}

.package-title {
    margin: 0 0 1rem 0;
    color: var(--color-primary);
    font-size: 1.25rem;
}

.package-description {
    margin: 0 0 1rem 0;
    color: var(--color-gray);
    line-height: 1.5;
}

.package-highlights {
    margin-bottom: 1rem;
}

.highlight {
    margin: 0.5rem 0;
    color: var(--color-gray);
    font-size: 0.875rem;
}

.package-price {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-bottom: 1rem;
}

.price-label {
    color: var(--color-gray);
    font-size: 0.875rem;
}

.price-amount {
    color: var(--color-primary);
    font-size: 1.5rem;
    font-weight: 700;
}

.price-currency {
    color: var(--color-gray);
    font-size: 0.875rem;
}

.package-actions {
    padding: 1.5rem;
    background: #f8fafc;
    border-top: 1px solid #e2e8f0;
}

.package-actions .btn {
    width: 100%;
    text-align: center;
}

@media (max-width: 768px) {
    .search-page {
        padding: 1rem;
    }
    
    .search-input-group {
        flex-direction: column;
        gap: 1rem;
    }
    
    .packages-grid {
        grid-template-columns: 1fr;
    }
    
    .examples-grid {
        flex-direction: column;
        align-items: center;
    }
}
</style>
{% endblock %} 