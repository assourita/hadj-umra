{% extends 'base.html.twig' %}

{% block title %}Nos Packages Hajj et Omra - D√®m√® Travel{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="page-hero">
    <div class="hero-background">
        <div class="hero-overlay"></div>
    </div>
    <div class="hero-content">
        <div class="container">
            <div class="hero-text">
                <h1>Nos Packages Hajj et Omra</h1>
                <p>D√©couvrez nos offres soigneusement √©labor√©es pour votre p√®lerinage spirituel</p>
            </div>
        </div>
    </div>
</section>

<!-- Search Section -->
<section class="search-section">
    <div class="container">
        <div class="search-form">
            <h3>üîç Trouvez votre package id√©al</h3>
            <form action="{{ path('app_packages_index') }}" method="GET" class="search-grid">
                <div class="form-group">
                    <label for="city">Ville de d√©part</label>
                    <select name="city" id="city" class="form-control">
                        <option value="">Toutes les villes</option>
                        <option value="Paris">Paris</option>
                        <option value="Lyon">Lyon</option>
                        <option value="Marseille">Marseille</option>
                        <option value="Toulouse">Toulouse</option>
                        <option value="Bamako">Bamako</option>
                        <option value="Abidjan">Abidjan</option>
                        <option value="Dakar">Dakar</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="date_from">√Ä partir du</label>
                    <input type="date" name="date_from" id="date_from" class="form-control" min="{{ 'now'|date('Y-m-d') }}">
                </div>
                
                <div class="form-group">
                    <label for="duration">Dur√©e</label>
                    <select name="duration" id="duration" class="form-control">
                        <option value="">Toutes les dur√©es</option>
                        <option value="7">7 jours</option>
                        <option value="10">10 jours</option>
                        <option value="15">15 jours</option>
                        <option value="20">20 jours</option>
                        <option value="30">30 jours</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="price_max">Prix maximum</label>
                    <select name="price_max" id="price_max" class="form-control">
                        <option value="">Tous les prix</option>
                        <option value="1000000">1 000 000 XOF</option>
                        <option value="1500000">1 500 000 XOF</option>
                        <option value="2000000">2 000 000 XOF</option>
                        <option value="3000000">3 000 000 XOF</option>
                    </select>
                </div>
                
                <div class="form-group form-group-full">
                    <button type="submit" class="btn btn-primary btn-large">
                        <span class="btn-icon">üîç</span>
                        Rechercher
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Packages Section -->
<section class="packages-section">
    <div class="container">
        {% if packages is empty %}
            <div class="empty-state">
                <div class="empty-icon">üèúÔ∏è</div>
                <h3>Aucun package trouv√©</h3>
                <p>Aucun package ne correspond √† vos crit√®res de recherche.</p>
                <a href="{{ path('app_packages_index') }}" class="btn btn-secondary">
                    Voir tous les packages
                </a>
            </div>
        {% else %}
            <div class="packages-header">
                <h2>{{ packages|length }} package(s) trouv√©(s)</h2>
                <div class="packages-sort">
                    <label for="sort">Trier par :</label>
                    <select id="sort" class="form-control">
                        <option value="price_asc">Prix croissant</option>
                        <option value="price_desc">Prix d√©croissant</option>
                        <option value="duration_asc">Dur√©e croissante</option>
                        <option value="duration_desc">Dur√©e d√©croissante</option>
                    </select>
                </div>
            </div>
            
            <div class="packages-grid">
                {% for package in packages %}
                    <div class="package-card">
                        <div class="package-image">
                            {% if package.images and package.images|length > 0 %}
                                <img src="{{ package.images[0] }}?v={{ "now"|date("U") }}" alt="{{ package.titre }}">
                            {% else %}
                                <div class="package-placeholder">
                                    üïå
                                </div>
                            {% endif %}
                            <div class="package-badges">
                                <span class="badge badge-duration">{{ package.dureeJours }} jours</span>
                                {% if package.isActive %}
                                    <span class="badge badge-active">Disponible</span>
                                {% endif %}
                            </div>
                        </div>
                        
                        <div class="package-content">
                            <h3 class="package-title">{{ package.titre }}</h3>
                            <p class="package-description">
                                {{ package.description|length > 120 ? package.description|slice(0, 120) ~ '...' : package.description }}
                            </p>
                            
                            <div class="package-features">
                                <div class="feature-item">
                                    <span class="feature-icon">‚úàÔ∏è</span>
                                    <span class="feature-text">Vol inclus</span>
                                </div>
                                <div class="feature-item">
                                    <span class="feature-icon">üè®</span>
                                    <span class="feature-text">H√¥tels 4*</span>
                                </div>
                                <div class="feature-item">
                                    <span class="feature-icon">üìã</span>
                                    <span class="feature-text">Visa inclus</span>
                                </div>
                                {% if package.hotelMakkah %}
                                <div class="feature-item">
                                    <span class="feature-icon">üïå</span>
                                    <span class="feature-text">{{ package.hotelMakkah }}</span>
                                </div>
                                {% endif %}
                            </div>
                            
                            {% if package.departs is not empty %}
                                <div class="package-departs">
                                    <h4>Prochains d√©parts</h4>
                                    {% for depart in package.departs|slice(0, 2) %}
                                        {% if depart.isActive and depart.dateDepart > date() %}
                                            <div class="depart-item">
                                                <div class="depart-info">
                                                    <span class="depart-city">{{ depart.villeDepart }}</span>
                                                    <span class="depart-date">{{ depart.dateDepart|date('d/m/Y') }}</span>
                                                </div>
                                                <span class="depart-places">
                                                    {{ depart.quotaTotal - depart.quotaVendu }} places
                                                </span>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            {% endif %}
                            
                            <div class="package-footer">
                                {% if package.prixBase %}
                                    <div class="package-price">
                                        <span class="price-label">√Ä partir de</span>
                                        <span class="price-amount">{{ package.prixBase|number_format(0, ',', ' ') }}</span>
                                        <span class="price-currency">XOF</span>
                                    </div>
                                {% endif %}
                                
                                <div class="package-actions">
                                    <a href="{{ path('app_package_show', {'slug': package.slug}) }}" 
                                       class="btn btn-primary">
                                        Voir les d√©tails
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}

{% block stylesheets %}
<style>
/* Variables CSS - Harmonis√© avec la navbar admin */
:root {
    --color-primary: #1e3a8a;     /* Bleu nuit - m√™me que navbar admin */
    --color-secondary: #f59e0b;   /* Or doux - m√™me que navbar admin */
    --color-accent: #fbbf24;      /* Sable */
    --color-success: #10b981;
    --color-warning: #f59e0b;
    --color-danger: #ef4444;
    --color-dark: #1f2937;
    --color-light: #f8fafc;
    --color-gray: #6b7280;
    --color-white: #ffffff;
    
    --gradient-primary: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    --gradient-hero: linear-gradient(135deg, rgba(30, 58, 138, 0.9), rgba(245, 158, 11, 0.8));
    
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    
    --border-radius: 0.75rem;
    --border-radius-lg: 1rem;
    --border-radius-xl: 1.5rem;
}

/* Page Hero */
.page-hero {
    position: relative;
    min-height: 40vh;
    display: flex;
    align-items: center;
    overflow: hidden;
}

.hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--gradient-hero);
    z-index: -2;
}

.hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    z-index: -1;
}

.hero-content {
    width: 100%;
    z-index: 1;
}

.hero-text {
    text-align: center;
    color: var(--color-white);
    max-width: 600px;
    margin: 0 auto;
}

.hero-text h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.hero-text p {
    font-size: 1.125rem;
    opacity: 0.9;
    line-height: 1.6;
}

/* Search Section */
.search-section {
    padding: 3rem 0;
    background: var(--color-white);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.search-form {
    background: var(--color-light);
    padding: 2rem;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
}

.search-form h3 {
    text-align: center;
    color: var(--color-primary);
    font-size: 1.5rem;
    margin-bottom: 2rem;
    font-weight: 600;
}

.search-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    align-items: end;
}

.form-group {
    display: flex;
    flex-direction: column;
}

.form-group-full {
    grid-column: 1 / -1;
    text-align: center;
}

.form-group label {
    font-weight: 600;
    color: var(--color-dark);
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
}

.form-control {
    padding: 0.75rem 1rem;
    border: 2px solid rgba(0, 0, 0, 0.1);
    border-radius: var(--border-radius);
    font-size: 1rem;
    transition: all 0.3s ease;
    background: var(--color-white);
}

.form-control:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(30, 58, 138, 0.1);
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
}

.btn:hover::before {
    left: 100%;
}

.btn-primary {
    background: var(--gradient-primary);
    color: var(--color-white);
    box-shadow: var(--shadow-lg);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
}

.btn-secondary {
    background: var(--color-gray);
    color: var(--color-white);
}

.btn-secondary:hover {
    background: var(--color-dark);
    transform: translateY(-2px);
}

.btn-large {
    padding: 1rem 2.5rem;
    font-size: 1.125rem;
}

.btn-icon {
    font-size: 1.25rem;
}

/* Container */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}

/* Packages Section */
.packages-section {
    padding: 4rem 0;
    background: var(--color-light);
}

.packages-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
}

.packages-header h2 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-dark);
    margin: 0;
}

.packages-sort {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.packages-sort label {
    font-weight: 600;
    color: var(--color-dark);
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--color-white);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
}

.empty-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
}

.empty-state h3 {
    margin: 0 0 1rem 0;
    color: var(--color-primary);
}

.empty-state p {
    margin: 0 0 2rem 0;
    color: var(--color-gray);
}

/* Packages Grid */
.packages-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: 2rem;
}

.package-card {
    background: var(--color-white);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    overflow: hidden;
    transition: all 0.3s ease;
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.package-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
}

.package-image {
    position: relative;
    height: 220px;
    overflow: hidden;
}

.package-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.package-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-primary);
    color: var(--color-white);
    font-size: 3rem;
}

.package-badges {
    position: absolute;
    top: 1rem;
    right: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.badge {
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.badge-duration {
    background: rgba(0, 0, 0, 0.8);
    color: var(--color-white);
}

.badge-active {
    background: var(--color-success);
    color: var(--color-white);
}

.package-content {
    padding: 1.5rem;
}

.package-title {
    margin: 0 0 1rem 0;
    color: var(--color-primary);
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
}

.package-description {
    margin: 0 0 1.5rem 0;
    color: var(--color-gray);
    line-height: 1.6;
    font-size: 0.95rem;
}

.package-features {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
    margin-bottom: 1.5rem;
}

.feature-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-gray);
}

.feature-icon {
    font-size: 1rem;
}

.feature-text {
    font-weight: 500;
}

.package-departs {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: var(--color-light);
    border-radius: var(--border-radius);
}

.package-departs h4 {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-dark);
    margin: 0 0 0.75rem 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.depart-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.depart-item:last-child {
    border-bottom: none;
}

.depart-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.depart-city {
    font-weight: 600;
    color: var(--color-dark);
    font-size: 0.875rem;
}

.depart-date {
    color: var(--color-gray);
    font-size: 0.75rem;
}

.depart-places {
    background: var(--color-primary);
    color: var(--color-white);
    padding: 0.25rem 0.5rem;
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
}

.package-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
}

.package-price {
    text-align: center;
}

.price-label {
    display: block;
    font-size: 0.75rem;
    color: var(--color-gray);
    margin-bottom: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.price-amount {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary);
}

.price-currency {
    font-size: 0.875rem;
    color: var(--color-gray);
    margin-left: 0.25rem;
}

.package-actions {
    flex-shrink: 0;
}

/* Responsive Design */
@media (max-width: 768px) {
    .hero-text h1 {
        font-size: 2rem;
    }
    
    .search-grid {
        grid-template-columns: 1fr;
    }
    
    .packages-header {
        flex-direction: column;
        align-items: stretch;
    }
    
    .packages-grid {
        grid-template-columns: 1fr;
    }
    
    .package-features {
        grid-template-columns: 1fr;
    }
    
    .package-footer {
        flex-direction: column;
        align-items: stretch;
    }
    
    .package-actions {
        width: 100%;
    }
    
    .package-actions .btn {
        width: 100%;
        justify-content: center;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 0 0.5rem;
    }
    
    .search-form {
        padding: 1.5rem;
    }
    
    .package-content {
        padding: 1rem;
    }
}
</style>
{% endblock %} 