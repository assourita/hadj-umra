{% extends 'layouts/admin_dashboard.html.twig' %}

{% block title %}Nouveau Package{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="page-header">
        <h1>‚ûï Nouveau Package</h1>
        <p>Cr√©ez un nouveau package de voyage</p>
    </div>

    <div class="content">
        <form method="POST" enctype="multipart/form-data" class="package-form">
            <div class="form-sections">
                <!-- Informations de base -->
                <div class="form-section">
                    <h3>üìã Informations de base</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="titre">Titre du package *</label>
                            <input type="text" id="titre" name="titre" class="form-control" required minlength="5" maxlength="255">
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="description">Description *</label>
                            <textarea id="description" name="description" class="form-control" rows="5" required minlength="10"></textarea>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="programme">Programme d√©taill√©</label>
                            <textarea id="programme" name="programme" class="form-control" rows="8"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Prix et devise -->
                <div class="form-section">
                    <h3>üí∞ Prix et devise</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="prixBase">Prix de base</label>
                            <input type="text" id="prixBase" name="prixBase" class="form-control" placeholder="Ex: 1500000">
                        </div>
                        <div class="form-group">
                            <label for="devise">Devise</label>
                            <select id="devise" name="devise" class="form-control">
                                <option value="XOF">XOF (Franc CFA)</option>
                                <option value="EUR">EUR (Euro)</option>
                                <option value="USD">USD (Dollar US)</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- D√©tails du voyage -->
                <div class="form-section">
                    <h3>‚úàÔ∏è D√©tails du voyage</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="dureeJours">Dur√©e (jours) *</label>
                            <input type="number" id="dureeJours" name="dureeJours" class="form-control" required min="1" max="365" placeholder="Ex: 15">
                        </div>
                    </div>
                </div>

                <!-- H√©bergement -->
                <div class="form-section">
                    <h3>üè® H√©bergement</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="hotelMakkah">H√¥tel √† Makkah</label>
                            <input type="text" id="hotelMakkah" name="hotelMakkah" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="hotelMadinah">H√¥tel √† Madinah</label>
                            <input type="text" id="hotelMadinah" name="hotelMadinah" class="form-control">
                        </div>
                    </div>
                </div>

                <!-- Services -->
                <div class="form-section">
                    <h3>üéØ Services</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="inclus">Services inclus</label>
                            <textarea id="inclus" name="inclus" class="form-control" rows="4" placeholder="Liste des services inclus..."></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for="nonInclus">Services non inclus</label>
                            <textarea id="nonInclus" name="nonInclus" class="form-control" rows="4" placeholder="Liste des services non inclus..."></textarea>
                        </div>
                    </div>
                </div>

                <!-- Images du package -->
                <div class="form-section">
                    <h3>üñºÔ∏è Images du package</h3>
                    <div class="upload-section">
                        <div class="form-group">
                            <label for="images">Images du package</label>
                            <input type="file" id="images" name="images[]" class="form-control" accept="image/*" multiple>
                            <small class="form-text text-muted">T√©l√©chargez une ou plusieurs images (JPG, PNG, WebP - max 5MB chacune)</small>
                        </div>
                        
                        <!-- Images par d√©faut disponibles -->
                        <div class="default-images-section">
                            <h4>Images par d√©faut disponibles</h4>
                            <p class="text-muted">üí° Si vous n'ajoutez pas d'images, des images par d√©faut seront automatiquement assign√©es au package.</p>
                            <div class="default-images-grid">
                                <div class="default-image">
                                    <img src="{{ asset('uploads/packages/omra1.webp') }}" alt="Omra 1">
                                    <span>Omra 1</span>
                                </div>
                                <div class="default-image">
                                    <img src="{{ asset('uploads/packages/omra2.webp') }}" alt="Omra 2">
                                    <span>Omra 2</span>
                                </div>
                                <div class="default-image">
                                    <img src="{{ asset('uploads/packages/omra3.webp') }}" alt="Omra 3">
                                    <span>Omra 3</span>
                                </div>
                                <div class="default-image">
                                    <img src="{{ asset('uploads/packages/omra4.webp') }}" alt="Omra 4">
                                    <span>Omra 4</span>
                                </div>
                                <div class="default-image">
                                    <img src="{{ asset('uploads/packages/omra5.webp') }}" alt="Omra 5">
                                    <span>Omra 5</span>
                                </div>
                                <div class="default-image">
                                    <img src="{{ asset('uploads/packages/kaaba.svg') }}" alt="Kaaba">
                                    <span>Kaaba</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Statut -->
                <div class="form-section">
                    <h3>‚öôÔ∏è Statut</h3>
                    <div class="form-row">
                        <div class="form-group">
                            <div class="form-check">
                                <input type="checkbox" id="isActive" name="isActive" class="form-check-input" checked>
                                <label for="isActive" class="form-check-label">Package actif</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <a href="{{ path('app_admin_packages_index') }}" class="btn btn-secondary">
                    ‚Üê Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    üíæ Cr√©er le package
                </button>
            </div>
        </form>
    </div>
</div>

<style>
.page-header {
    margin-bottom: 2rem;
}

.page-header h1 {
    margin: 0 0 0.5rem 0;
    color: #1f2937;
    font-size: 2rem;
}

.page-header p {
    margin: 0;
    color: #6b7280;
    font-size: 1.125rem;
}

.content {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.package-form {
    max-width: 800px;
    margin: 0 auto;
}

.form-sections {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.form-section {
    border: 1px solid #e5e7eb;
    border-radius: 0.75rem;
    padding: 1.5rem;
    background: #f9fafb;
}

.form-section h3 {
    margin: 0 0 1rem 0;
