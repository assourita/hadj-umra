    border-radius: 0.5rem;
    border-left: 4px solid var(--color-primary);
}

.stat-icon {
    font-size: 2rem;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
}

.stat-content h3 {
    margin: 0;
    font-size: 2rem;
    color: var(--color-primary);
}

.stat-content p {
    margin: 0.25rem 0 0 0;
    color: var(--color-gray);
}

@media (max-width: 768px) {
    .admin-reservations-report {
        padding: 1rem;
    }
    
    .page-header h1 {
        font-size: 2rem;
    }
    
    .actions-bar {
        flex-direction: column;
    }
    
    .table-header,
    .table-row {
        grid-template-columns: 1fr;
        gap: 0.5rem;
    }
    
    .header-cell {
        display: none;
    }
    
    .table-cell {
        padding: 0.25rem 0;
    }
    
    .table-cell:before {
        content: attr(data-label);
