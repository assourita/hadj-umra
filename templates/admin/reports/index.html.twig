{% extends 'layouts/admin_dashboard.html.twig' %}

{% block title %}Rapports - Administration{% endblock %}

{% block body %}
<div class="admin-reports">
    <div class="page-header">
        <h1>üìä Rapports et Statistiques</h1>
        <p>Analysez les performances de votre agence</p>
    </div>

    <div class="content">
        <!-- Statistiques g√©n√©rales -->
        <div class="stats-section">
            <h2>üìà Statistiques g√©n√©rales</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">üìã</div>
                    <div class="stat-content">
                        <h3>{{ stats.total_reservations }}</h3>
                        <p>R√©servations totales</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">‚úÖ</div>
                    <div class="stat-content">
                        <h3>{{ stats.reservations_confirmees }}</h3>
                        <p>R√©servations confirm√©es</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">‚è≥</div>
                    <div class="stat-content">
                        <h3>{{ stats.reservations_en_attente }}</h3>
                        <p>En attente de paiement</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">üì¶</div>
                    <div class="stat-content">
                        <h3>{{ stats.total_packages }}</h3>
                        <p>Packages actifs</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">üë•</div>
                    <div class="stat-content">
                        <h3>{{ stats.total_users }}</h3>
                        <p>Utilisateurs inscrits</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques mensuelles -->
        <div class="monthly-section">
            <h2>üìÖ √âvolution mensuelle</h2>
            <div class="monthly-chart">
                <div class="chart-container">
                    <div class="chart-bars">
                        {% for stat in monthly_stats %}
                            <div class="chart-bar">
                                <div class="bar-label">{{ stat.month }}</div>
                                <div class="bar-container">
                                    <div class="bar reservations" style="height: {{ (stat.reservations / 10) * 100 }}%">
                                        <span class="bar-value">{{ stat.reservations }}</span>
                                    </div>
                                    <div class="bar ca" style="height: {{ (stat.ca / 1000000) * 100 }}%">
                                        <span class="bar-value">{{ (stat.ca / 1000)|round }}k</span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="chart-legend">
                        <div class="legend-item">
                            <span class="legend-color reservations"></span>
                            <span>R√©servations</span>
                        </div>
                        <div class="legend-item">
                            <span class="legend-color ca"></span>
                            <span>CA (millions FCFA)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top packages -->
        <div class="packages-section">
            <h2>üèÜ Top Packages</h2>
            <div class="packages-list">
                {% for package in top_packages %}
                    <div class="package-item">
                        <div class="package-rank">{{ loop.index }}</div>
                        <div class="package-info">
                            <h4>{{ package.titre }}</h4>
                            <p>{{ package.reservation_count }} r√©servations</p>
                        </div>
                    </div>
                {% else %}
                    <div class="empty-message">
                        <p>Aucun package n'a encore de r√©servations.</p>
                    </div>
                {% endfor %}
            </div>
        </div>

        <!-- Actions -->
        <div class="actions-section">
            <h2>üìã Actions rapides</h2>
            <div class="actions-grid">
                <a href="{{ path('app_admin_reports_reservations') }}" class="action-card">
                    <div class="action-icon">üìã</div>
                    <h3>D√©tail des r√©servations</h3>
                    <p>Voir toutes les r√©servations</p>
                </a>
                
                <a href="{{ path('app_admin_reports_financial') }}" class="action-card">
                    <div class="action-icon">üí∞</div>
                    <h3>Rapport financier</h3>
                    <p>Analyser les revenus</p>
                </a>
                
                <a href="{{ path('app_admin_dashboard') }}" class="action-card">
                    <div class="action-icon">üè†</div>
                    <h3>Tableau de bord</h3>
                    <p>Retour au dashboard</p>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
.admin-reports {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
}

.page-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    border-radius: 1rem;
}

.page-header h1 {
    margin: 0 0 1rem 0;
    font-size: 2.5rem;
}

.page-header p {
    margin: 0;
    font-size: 1.1rem;
    opacity: 0.9;
}

.content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
}

.stats-section,
.monthly-section,
.packages-section,
.actions-section {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.stats-section h2,
.monthly-section h2,
.packages-section h2,
.actions-section h2 {
    margin: 0 0 2rem 0;
    color: var(--color-primary);
    font-size: 1.5rem;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
}

.stat-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 0.5rem;
    border-left: 4px solid var(--color-primary);
}

.stat-icon {
    font-size: 2rem;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
}

.stat-content h3 {
    margin: 0;
    font-size: 2rem;
    color: var(--color-primary);
}

.stat-content p {
    margin: 0.25rem 0 0 0;
    color: var(--color-gray);
}

.monthly-chart {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 0.5rem;
}

.chart-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.chart-bars {
    display: flex;
    align-items: end;
    gap: 1rem;
    height: 300px;
    padding: 1rem 0;
}

.chart-bar {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
}

.bar-label {
    font-size: 0.875rem;
    color: var(--color-gray);
    font-weight: 600;
}

.bar-container {
    width: 100%;
    height: 200px;
    display: flex;
    gap: 0.25rem;
    align-items: end;
}

.bar {
    flex: 1;
    background: var(--color-primary);
    border-radius: 0.25rem 0.25rem 0 0;
    position: relative;
    min-height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bar.reservations {
    background: var(--color-primary);
}

.bar.ca {
    background: var(--color-secondary);
}

.bar-value {
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    position: absolute;
    top: -1.5rem;
}

.chart-legend {
    display: flex;
    justify-content: center;
    gap: 2rem;
}

.legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-gray);
}

.legend-color {
    width: 1rem;
    height: 1rem;
    border-radius: 0.25rem;
}

.legend-color.reservations {
    background: var(--color-primary);
}

.legend-color.ca {
    background: var(--color-secondary);
}

.packages-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.package-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 0.5rem;
    border-left: 4px solid var(--color-primary);
}

.package-rank {
    width: 2rem;
    height: 2rem;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.875rem;
}

.package-info h4 {
    margin: 0 0 0.25rem 0;
    color: var(--color-primary);
}

.package-info p {
    margin: 0;
    color: var(--color-gray);
    font-size: 0.875rem;
}

.empty-message {
    text-align: center;
    padding: 2rem;
    color: var(--color-gray);
    font-style: italic;
}

.actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
}

.action-card {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 0.5rem;
    text-decoration: none;
    color: inherit;
    text-align: center;
    transition: transform 0.3s ease;
    border: 2px solid transparent;
}

.action-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-primary);
    color: inherit;
}

.action-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
}

.action-card h3 {
    margin: 0 0 1rem 0;
    color: var(--color-primary);
}

.action-card p {
    margin: 0;
    color: var(--color-gray);
}

@media (max-width: 768px) {
    .admin-reports {
        padding: 1rem;
    }
    
    .page-header h1 {
        font-size: 2rem;
    }
    
    .stats-grid {
        grid-template-columns: 1fr;
    }
    
    .chart-bars {
        flex-direction: column;
        height: auto;
        gap: 1rem;
    }
    
    .chart-bar {
        flex-direction: row;
        height: auto;
    }
    
    .bar-container {
        height: 100px;
        width: 100px;
    }
    
    .chart-legend {
        flex-direction: column;
        gap: 1rem;
    }
    
    .actions-grid {
        grid-template-columns: 1fr;
    }
}
</style>
{% endblock %} 