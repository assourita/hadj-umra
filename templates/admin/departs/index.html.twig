    align-items: center;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e5e7eb;
}

.depart-header h3 {
    margin: 0;
    color: #1f2937;
    font-size: 1.25rem;
}

.depart-date {
    background: #3b82f6;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 600;
}

.depart-details {
    margin-bottom: 1.5rem;
}

.detail-item {
