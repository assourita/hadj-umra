{% extends 'layouts/admin_dashboard.html.twig' %}

{% block title %}Toutes les R√©servations{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="page-header">
        <h1>üìã Toutes les R√©servations</h1>
        <p>G√©rez toutes les r√©servations de tous les statuts</p>
    </div>

    {% if reservations is empty %}
        <div class="empty-state">
            <div class="empty-icon">üìã</div>
            <h3>Aucune r√©servation trouv√©e</h3>
            <p>Aucune r√©servation n'a √©t√© cr√©√©e pour le moment.</p>
        </div>
    {% else %}
        <div class="reservations-container">
            <div class="filters-section">
                <div class="filter-group">
                    <label for="status-filter">Filtrer par statut :</label>
                    <select id="status-filter" class="form-control">
                        <option value="">Tous les statuts</option>
                        <option value="en_attente_approbation">En attente d'approbation</option>
                        <option value="en_attente_documents">En attente de documents</option>
                        <option value="en_attente_paiement">En attente de paiement</option>
                        <option value="confirmee">Confirm√©e</option>
                        <option value="annulee">Annul√©e</option>
                    </select>
                </div>
            </div>

            <div class="reservations-grid">
                {% for reservation in reservations %}
                    <div class="reservation-card" data-status="{{ reservation.statut }}">
                        <div class="reservation-header">
                            <h3>R√©servation #{{ reservation.codeDossier }}</h3>
                            <span class="status-badge status-{{ reservation.statut }}">
                                {% if reservation.statut == 'en_attente_approbation' %}
                                    ‚è≥ En attente d'approbation
                                {% elseif reservation.statut == 'en_attente_documents' %}
                                    üìÑ En attente de documents
                                {% elseif reservation.statut == 'en_attente_paiement' %}
                                    üí≥ En attente de paiement
                                {% elseif reservation.statut == 'confirmee' %}
                                    ‚úÖ Confirm√©e
                                {% elseif reservation.statut == 'annulee' %}
                                    ‚ùå Annul√©e
                                {% else %}
                                    {{ reservation.statut|title }}
                                {% endif %}
                            </span>
                        </div>

                        <div class="reservation-details">
                            <div class="detail-row">
                                <span class="label">Client :</span>
                                <span class="value">{{ reservation.user.prenom }} {{ reservation.user.nom }}</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Package :</span>
                                <span class="value">{{ reservation.depart.package.titre }}</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">D√©part :</span>
                                <span class="value">{{ reservation.depart.dateDepart|date('d/m/Y') }}</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">P√®lerins :</span>
                                <span class="value">{{ reservation.nbPelerins }} personne(s)</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Total :</span>
                                <span class="value price">{{ reservation.total|number_format(0, ',', ' ') }} XOF</span>
                            </div>
                            <div class="detail-row">
                                <span class="label">Date de cr√©ation :</span>
                                <span class="value">{{ reservation.createdAt|date('d/m/Y H:i') }}</span>
                            </div>
                            {% if reservation.dateLimiteDocument %}
                                <div class="detail-row">
                                    <span class="label">Date limite documents :</span>
                                    <span class="value">
                                        {{ reservation.dateLimiteDocument|date('d/m/Y') }}
                                        {% set daysLeft = reservation.dateLimiteDocument|date('U') - "now"|date('U') %}
                                        {% if daysLeft > 0 %}
                                            <span class="days-left">({{ (daysLeft / 86400)|round(0, 'floor') }} jours)</span>
                                        {% else %}
                                            <span class="deadline-passed">(D√©pass√©e)</span>
                                        {% endif %}
                                    </span>
                                </div>
                            {% endif %}
                        </div>

                        <div class="reservation-actions">
                            <a href="{{ path('app_admin_reservation_show', {'id': reservation.id}) }}" class="btn btn-secondary btn-small">
                                üëÅÔ∏è Voir d√©tails
                            </a>
                            
                            {% if reservation.statut == 'en_attente_approbation' %}
                                <form method="POST" action="{{ path('app_admin_reservation_approve', {'id': reservation.id}) }}" style="display: inline;">
                                    <button type="submit" class="btn btn-success btn-small" onclick="return confirm('Approuver cette r√©servation ?')">
                                        ‚úÖ Approuver
                                    </button>
                                </form>
                                <button type="button" class="btn btn-danger btn-small" onclick="showRejectModal({{ reservation.id }})">
                                    ‚ùå Rejeter
                                </button>
                            {% elseif reservation.statut == 'en_attente_documents' %}
                                <form method="POST" action="{{ path('app_admin_reservation_validate_documents', {'id': reservation.id}) }}" style="display: inline;">
                                    <button type="submit" class="btn btn-success btn-small" onclick="return confirm('Valider les documents de cette r√©servation ?')">
                                        ‚úÖ Valider documents
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>

<!-- Modal pour rejeter une r√©servation -->
<div id="rejectModal" class="modal" style="display: none;">
    <div class="modal-content">
        <h3>Rejeter la r√©servation</h3>
        <form id="rejectForm" method="POST">
            <div class="form-group">
                <label for="reject-reason">Raison du rejet :</label>
                <textarea id="reject-reason" name="raison" class="form-control" rows="3" required></textarea>
            </div>
            <div class="modal-actions">
                <button type="button" class="btn btn-secondary" onclick="closeRejectModal()">Annuler</button>
                <button type="submit" class="btn btn-danger">Rejeter</button>
            </div>
        </form>
    </div>
</div>

