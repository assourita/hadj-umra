{% extends 'base.html.twig' %}

{% block title %}{{ announcement.title }} - DƐMƐ Travel{% endblock %}

{% block body %}
<!-- Page Content -->
<div class="page_content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home') }}">Accueil</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_announcements') }}">Annonces</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">{{ announcement.title|slice(0, 30) }}...</li>
                    </ol>
                </nav>

                <!-- Article principal -->
                <article class="announcement-article">
                    <!-- En-tête de l'article -->
                    <header class="article-header">
                        <div class="article-badges">
                            {% if announcement.type == 'urgent' %}
                                <span class="badge badge-danger">URGENT</span>
                            {% elseif announcement.type == 'promotion' %}
                                <span class="badge badge-warning">PROMOTION</span>
                            {% elseif announcement.type == 'information' %}
                                <span class="badge badge-info">INFORMATION</span>
                            {% endif %}
                            
                            {% if announcement.priority >= 8 %}
                                <span class="badge badge-danger">PRIORITÉ</span>
                            {% elseif announcement.priority >= 5 %}
                                <span class="badge badge-warning">IMPORTANT</span>
                            {% endif %}
                        </div>

                        <h1 class="article-title">{{ announcement.title }}</h1>

                        <div class="article-meta">
                            <div class="meta-item">
                                <i class="fa fa-calendar"></i>
                                <span>Publié le {{ announcement.publishedAt|date('d/m/Y à H:i') }}</span>
                            </div>
                            {% if announcement.type %}
                                <div class="meta-item">
                                    <i class="fa fa-tag"></i>
                                    <span>{{ announcement.type|upper }}</span>
                                </div>
                            {% endif %}
                            <div class="meta-item">
                                <i class="fa fa-eye"></i>
                                <span>Annonce publique</span>
                            </div>
                        </div>
                    </header>

                    <!-- Image de l'article -->
                    {% if announcement.image %}
                        <div class="article-image">
                            <img src="{{ asset('uploads/announcements/' ~ announcement.image) }}" 
                                 alt="{{ announcement.title }}" 
                                 class="img-fluid rounded">
                        </div>
                    {% endif %}

                    <!-- Contenu de l'article -->
                    <div class="article-content">
                        {{ announcement.content|raw }}
                    </div>

                    <!-- Actions -->
                    <div class="article-actions">
                        <div class="row">
                            <div class="col-md-6">
                                <a href="{{ path('app_announcements') }}" class="btn btn-outline-primary">
                                    <i class="fa fa-arrow-left"></i> Retour aux annonces
                                </a>
                            </div>
                            <div class="col-md-6 text-right">
                                <a href="{{ path('app_home') }}" class="btn btn-primary">
                                    <i class="fa fa-home"></i> Accueil
                                </a>
                                <a href="{{ path('app_reservation_package', {'id': 1}) }}" class="btn btn-success">
                                    <i class="fa fa-suitcase"></i> Réserver un package
                                </a>
                            </div>
                        </div>
                    </div>
                </article>

                <!-- Section partage -->
                <div class="share-section">
                    <h4>Partager cette annonce</h4>
                    <div class="share-buttons">
                        <a href="https://www.facebook.com/sharer/sharer.php?u={{ app.request.uri|url_encode }}" 
                           target="_blank" 
                           class="btn btn-facebook">
                            <i class="fa fa-facebook"></i> Facebook
                        </a>
                        <a href="https://twitter.com/intent/tweet?text={{ announcement.title|url_encode }}&url={{ app.request.uri|url_encode }}" 
                           target="_blank" 
                           class="btn btn-twitter">
                            <i class="fa fa-twitter"></i> Twitter
                        </a>
                        <a href="https://wa.me/?text={{ announcement.title|url_encode }}%20{{ app.request.uri|url_encode }}" 
                           target="_blank" 
                           class="btn btn-whatsapp">
                            <i class="fa fa-whatsapp"></i> WhatsApp
                        </a>
                        <button onclick="copyToClipboard()" class="btn btn-secondary">
                            <i class="fa fa-link"></i> Copier le lien
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.announcement-article {
    background: #fff;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    overflow: hidden;
    margin-bottom: 30px;
}

.article-header {
    padding: 30px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.article-badges {
    margin-bottom: 20px;
}

.article-badges .badge {
    margin-right: 10px;
    font-size: 0.8rem;
    padding: 8px 15px;
}

.article-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 20px;
    line-height: 1.3;
}

.article-meta {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
}

.meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.95rem;
    opacity: 0.9;
}

.meta-item i {
    font-size: 1.1rem;
}

.article-image {
    padding: 20px;
    text-align: center;
}

.article-image img {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
    box-shadow: 0 3px 15px rgba(0,0,0,0.1);
}

.article-content {
    padding: 30px;
    line-height: 1.8;
    font-size: 1.1rem;
    color: #333;
}

.article-content h1, .article-content h2, .article-content h3, .article-content h4 {
    color: #2c3e50;
    margin-top: 30px;
    margin-bottom: 15px;
}

.article-content p {
    margin-bottom: 20px;
}

.article-content ul, .article-content ol {
    margin-bottom: 20px;
    padding-left: 20px;
}

.article-content li {
    margin-bottom: 8px;
}

.article-content strong {
    color: #2c3e50;
    font-weight: 600;
}

.article-content em {
    color: #7f8c8d;
    font-style: italic;
}

.article-actions {
    padding: 20px 30px;
    background: #f8f9fa;
    border-top: 1px solid #e9ecef;
}

.article-actions .btn {
    margin: 5px;
}

.share-section {
    background: #fff;
    border-radius: 15px;
    padding: 30px;
    box-shadow: 0 3px 15px rgba(0,0,0,0.1);
    text-align: center;
}

.share-section h4 {
    margin-bottom: 20px;
    color: #2c3e50;
}

.share-buttons {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    justify-content: center;
}

.share-buttons .btn {
    padding: 10px 20px;
    border-radius: 25px;
    font-weight: 500;
    transition: all 0.3s ease;
}

.btn-facebook {
    background: #3b5998;
    color: white;
    border: none;
}

.btn-facebook:hover {
    background: #2d4373;
    color: white;
    transform: translateY(-2px);
}

.btn-twitter {
    background: #1da1f2;
    color: white;
    border: none;
}

.btn-twitter:hover {
    background: #0d8bd9;
    color: white;
    transform: translateY(-2px);
}

.btn-whatsapp {
    background: #25d366;
    color: white;
    border: none;
}

.btn-whatsapp:hover {
    background: #1ea952;
    color: white;
    transform: translateY(-2px);
}

.breadcrumb {
    background: #f8f9fa;
    border-radius: 10px;
    padding: 15px 20px;
}

.breadcrumb-item a {
    color: #667eea;
    text-decoration: none;
}

.breadcrumb-item a:hover {
    color: #764ba2;
}

@media (max-width: 768px) {
    .article-title {
        font-size: 2rem;
    }
    
    .article-meta {
        flex-direction: column;
        gap: 10px;
    }
    
    .article-actions .row {
        text-align: center;
    }
    
    .article-actions .col-md-6 {
        margin-bottom: 15px;
    }
    
    .share-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .share-buttons .btn {
        width: 100%;
        max-width: 200px;
    }
}
</style>

<script>
function copyToClipboard() {
    navigator.clipboard.writeText(window.location.href).then(function() {
        // Créer une notification temporaire
        const notification = document.createElement('div');
        notification.style.cssText = `
            position: fixed;
            top: 20px;
            right: 20px;
            background: #28a745;
            color: white;
            padding: 15px 20px;
            border-radius: 5px;
            z-index: 1000;
            animation: slideIn 0.3s ease;
        `;
        notification.textContent = 'Lien copié dans le presse-papiers !';
        document.body.appendChild(notification);
        
        setTimeout(() => {
            notification.style.animation = 'slideOut 0.3s ease';
            setTimeout(() => {
                document.body.removeChild(notification);
            }, 300);
        }, 2000);
    });
}

// Ajouter les animations CSS
const style = document.createElement('style');
style.textContent = `
    @keyframes slideIn {
        from { transform: translateX(100%); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }
    @keyframes slideOut {
        from { transform: translateX(0); opacity: 1; }
        to { transform: translateX(100%); opacity: 0; }
    }
`;
document.head.appendChild(style);
</script>
{% endblock %}
