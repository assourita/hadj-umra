<script>
function showMessageDetails(messageId) {
    // Trouver le message correspondant dans les donn√©es
    const messageCard = document.querySelector(`[data-message-id="${messageId}"]`);
    if (!messageCard) return;
    
    // Extraire les donn√©es du message depuis les attributs data
    const messageData = {
        id: messageCard.dataset.messageId,
        sujet: messageCard.dataset.messageSujet,
        message: messageCard.dataset.messageContent,
        date: messageCard.dataset.messageDate,
        statut: messageCard.dataset.messageStatut,
        reponse: messageCard.dataset.messageReponse,
        reponseDate: messageCard.dataset.messageReponseDate,
        reponsePar: messageCard.dataset.messageReponsePar
    };
    
    const modal = document.getElementById('messageModal');
    const modalContent = document.getElementById('modal-content');
    
    // Construire le contenu HTML du modal
    let content = `
        <div class="message-details-modal">
            <div class="message-header-modal">
                <h4>üìß ${messageData.sujet}</h4>
                <span class="message-date-modal">Envoy√© le ${messageData.date}</span>
            </div>
            
            <div class="message-body-modal">
                <h5>üí¨ Votre message :</h5>
                <div class="message-text">
                    ${messageData.message}
                </div>
            </div>
    `;
    
    // Ajouter la r√©ponse si elle existe
    if (messageData.reponse && messageData.reponse !== 'null') {
        content += `
            <div class="response-body-modal">
                <h5>üì® R√©ponse de D√®m√® Travel :</h5>
                <div class="response-text">
                    ${messageData.reponse}
                </div>
                <div class="response-meta">
                    <small>
                        R√©pondu le ${messageData.reponseDate}
                        ${messageData.reponsePar ? `par ${messageData.reponsePar}` : ''}
                    </small>
                </div>
            </div>
        `;
    } else {
        content += `
            <div class="no-response-modal">
                <p>‚è≥ Aucune r√©ponse pour le moment</p>
                <p class="response-note">Notre √©quipe traite votre demande et vous r√©pondra dans les plus brefs d√©lais.</p>
            </div>
        `;
    }
    
    content += `
        </div>
    `;
    
    modalContent.innerHTML = content;
    modal.style.display = 'flex';
}

function closeMessageModal() {
    const modal = document.getElementById('messageModal');
    modal.style.display = 'none';
}

// Fermer le modal en cliquant √† l'ext√©rieur
document.getElementById('messageModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeMessageModal();
    }
});

// Fermer le modal avec la touche Escape
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        closeMessageModal();
    }
});
</script>
