{% extends 'layouts/client_dashboard.html.twig' %}

{% block title %}Mes Messages{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="page-header">
        <div class="header-content">
            <h1>üí¨ Mes Messages</h1>
            <p>Consultez vos messages envoy√©s et les r√©ponses re√ßues</p>
        </div>
        
        <div class="header-actions">
            <a href="{{ path('app_contact') }}" class="btn btn-primary">
                <i class="icon">üì§</i>
                Nouveau message
            </a>
        </div>
    </div>

    <div class="messages-container">
        {% if messages is empty %}
            <div class="empty-state">
                <div class="empty-icon">üí¨</div>
                <h3>Aucun message trouv√©</h3>
                <p>Vous n'avez pas encore envoy√© de messages.</p>
                
                <!-- Debug information -->
                {% if debugInfo is defined %}
                    <div class="debug-info" style="background: #f8f9fa; padding: 1rem; border-radius: 0.5rem; margin: 1rem 0; text-align: left;">
                        <h4>üîç Informations de debug :</h4>
                        <p><strong>Email recherch√© :</strong> {{ debugInfo.user_email }}</p>
                        <p><strong>Messages trouv√©s :</strong> {{ debugInfo.messages_found }}</p>
                        <p><strong>Tous les messages en base :</strong></p>
                        <ul style="list-style: none; padding: 0;">
                            {% for msg in debugInfo.all_messages_in_db %}
                                <li style="padding: 0.25rem 0; border-bottom: 1px solid #e5e7eb;">
                                    <strong>{{ msg.email }}</strong> - {{ msg.nom }} - {{ msg.sujet }} ({{ msg.createdAt|date('d/m/Y H:i') }})
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
                
                <a href="{{ path('app_contact') }}" class="btn btn-primary">
                    <i class="icon">üì§</i>
                    Envoyer un message
                </a>
            </div>
        {% else %}
            <div class="messages-grid">
                {% for message in messages %}
                    <div class="message-card" 
                         data-message-id="{{ message.id }}"
                         data-message-sujet="{{ message.sujet|e('html_attr') }}"
                         data-message-content="{{ message.message|e('html_attr') }}"
                         data-message-date="{{ message.createdAt|date('d/m/Y H:i') }}"
                         data-message-statut="{{ message.statut }}"
                         data-message-reponse="{{ message.reponse|e('html_attr') }}"
                         data-message-reponse-date="{{ message.reponduAt ? message.reponduAt|date('d/m/Y H:i') : '' }}"
                         data-message-reponse-par="{{ message.reponduPar|e('html_attr') }}">
                        <div class="message-header">
                            <div class="message-info">
                                <h3>{{ message.sujet }}</h3>
                                <span class="message-date">{{ message.createdAt|date('d/m/Y H:i') }}</span>
                            </div>
                            <div class="message-status">
                                <span class="status-badge status-{{ message.statut }}">
                                    {% if message.statut == 'nouveau' %}
                                        üìù Nouveau
                                    {% elseif message.statut == 'en_cours' %}
                                        ‚è≥ En cours
                                    {% elseif message.statut == 'repondu' %}
                                        ‚úÖ R√©pondu
                                    {% elseif message.statut == 'clos' %}
                                        üîí Clos
                                    {% else %}
                                        {{ message.statut|title }}
                                    {% endif %}
                                </span>
                            </div>
                        </div>

                        <div class="message-content">
                            <div class="message-details">
                                <div class="detail-row">
                                    <span class="label">Sujet :</span>
                                    <span class="value">{{ message.sujet }}</span>
                                </div>
                                <div class="detail-row">
                                    <span class="label">Message :</span>
                                    <span class="value">{{ message.message|length > 100 ? message.message|slice(0, 100) ~ '...' : message.message }}</span>
                                </div>
                                {% if message.pays %}
                                    <div class="detail-row">
                                        <span class="label">Pays :</span>
                                        <span class="value">{{ message.pays }}</span>
                                    </div>
                                {% endif %}
                                {% if message.telephone %}
                                    <div class="detail-row">
                                        <span class="label">T√©l√©phone :</span>
                                        <span class="value">{{ message.telephone }}</span>
                                    </div>
                                {% endif %}
                            </div>

                            {% if message.reponse %}
                                <div class="response-section">
                                    <h4>üì® R√©ponse de D√®m√® Travel</h4>
                                    <div class="response-content">
                                        <p>{{ message.reponse }}</p>
                                        <div class="response-meta">
                                            <small>
                                                R√©pondu le {{ message.reponduAt|date('d/m/Y H:i') }}
                                                {% if message.reponduPar %}
                                                    par {{ message.reponduPar }}
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="no-response">
                                    <p>‚è≥ Aucune r√©ponse pour le moment</p>
                                </div>
                            {% endif %}
                        </div>

                        <div class="message-actions">
                            <button type="button" class="btn btn-secondary btn-small" onclick="showMessageDetails({{ message.id }})">
                                üëÅÔ∏è Voir d√©tails
                            </button>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

<!-- Modal pour les d√©tails du message -->
<div id="messageModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modal-title">D√©tails du message</h3>
            <span class="close" onclick="closeMessageModal()">&times;</span>
        </div>
        <div class="modal-body">
            <div id="modal-content">
                <!-- Le contenu sera charg√© dynamiquement -->
            </div>
        </div>
    </div>
</div>

