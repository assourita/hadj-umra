{% extends 'layouts/client_dashboard.html.twig' %}

{% block title %}Mon Profil - Espace Client{% endblock %}

{% block body %}
<div class="page-header">
    <h1>üë§ Mon Profil</h1>
    <p>G√©rez vos informations personnelles</p>
</div>

<div class="profile-container">
    <div class="profile-info">
        <div class="profile-avatar">
            <span>{{ user.prenom|first }}{{ user.nom|first }}</span>
        </div>
        
        <div class="profile-details">
            <h2>{{ user.prenom }} {{ user.nom }}</h2>
            <p class="user-email">{{ user.email }}</p>
            
            <div class="profile-stats">
                <div class="stat-item">
                    <span class="stat-number">{{ stats.total_reservations }}</span>
                    <span class="stat-label">R√©servations</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">{{ stats.reservations_confirmees }}</span>
                    <span class="stat-label">Confirm√©es</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">{{ stats.en_attente_paiement }}</span>
                    <span class="stat-label">En attente</span>
                </div>
            </div>
        </div>
        
        <div class="profile-actions">
            <a href="{{ path('app_client_profile_edit') }}" class="btn btn-primary">
                ‚úèÔ∏è Modifier le profil
            </a>
        </div>
    </div>
    
    <div class="recent-reservations">
        <h3>üìã Mes Derni√®res R√©servations</h3>
        
        {% if reservations is empty %}
            <div class="empty-state">
                <div class="empty-icon">üìã</div>
                <h4>Aucune r√©servation</h4>
                <p>Vous n'avez pas encore effectu√© de r√©servation.</p>
                <a href="{{ path('app_home') }}" class="btn btn-primary">
                    Voir les packages
                </a>
            </div>
        {% else %}
            <div class="reservations-list">
                {% for reservation in reservations|slice(0, 5) %}
                    <div class="reservation-item">
                        <div class="reservation-info">
                            <h4>{{ reservation.package.titre }}</h4>
                            <p class="reservation-date">
                                {{ reservation.depart.dateDepart|date('d/m/Y') }} - {{ reservation.depart.dateRetour|date('d/m/Y') }}
                            </p>
                        </div>
                        
                        <div class="reservation-status">
                            {% if reservation.statut == 'confirme' %}
                                <span class="status-badge confirmed">‚úÖ Confirm√©e</span>
                            {% elseif reservation.statut == 'en_attente_paiement' %}
                                <span class="status-badge pending">‚è≥ En attente de paiement</span>
                            {% elseif reservation.statut == 'en_attente_documents' %}
                                <span class="status-badge documents">üìÑ Documents requis</span>
                            {% else %}
                                <span class="status-badge other">{{ reservation.statut|title }}</span>
                            {% endif %}
                        </div>
                        
                        <div class="reservation-actions">
                            <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-secondary btn-small">
                                Voir d√©tails
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            {% if reservations|length > 5 %}
                <div class="view-all">
                    <a href="{{ path('app_client_reservations') }}" class="btn btn-secondary">
                        Voir toutes mes r√©servations
                    </a>
                </div>
            {% endif %}
        {% endif %}
    </div>
</div>

<style>
.page-header {
    margin-bottom: 2rem;
}

.page-header h1 {
    margin: 0 0 0.5rem 0;
    color: #1f2937;
    font-size: 2rem;
}

.page-header p {
    margin: 0;
    color: #6b7280;
    font-size: 1.125rem;
}

.profile-container {
    display: grid;
    gap: 2rem;
}

.profile-info {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    gap: 2rem;
}

.profile-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 600;
    color: white;
}

.profile-details {
    flex: 1;
}

.profile-details h2 {
    margin: 0 0 0.5rem 0;
    color: #1f2937;
    font-size: 1.5rem;
}

.user-email {
    margin: 0 0 1.5rem 0;
    color: #6b7280;
    font-size: 1rem;
}

.profile-stats {
    display: flex;
    gap: 2rem;
}

.stat-item {
    text-align: center;
}

.stat-number {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: #3b82f6;
}

.stat-label {
    font-size: 0.875rem;
    color: #6b7280;
}

.profile-actions {
    display: flex;
    gap: 1rem;
}

.recent-reservations {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.recent-reservations h3 {
    margin: 0 0 1.5rem 0;
    color: #1f2937;
    font-size: 1.25rem;
}

.empty-state {
    text-align: center;
    padding: 3rem 2rem;
}

.empty-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
}

.empty-state h4 {
    margin: 0 0 0.5rem 0;
    color: #1f2937;
    font-size: 1.125rem;
}

.empty-state p {
    margin: 0 0 1.5rem 0;
    color: #6b7280;
}

.reservations-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.reservation-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
}

.reservation-item:hover {
    border-color: #3b82f6;
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.1);
}

.reservation-info {
    flex: 1;
}

.reservation-info h4 {
    margin: 0 0 0.25rem 0;
    color: #1f2937;
    font-size: 1rem;
}

.reservation-date {
    margin: 0;
    color: #6b7280;
    font-size: 0.875rem;
}

.reservation-status {
    margin: 0 1rem;
}

.status-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 2rem;
    font-size: 0.75rem;
    font-weight: 600;
}

.status-badge.confirmed {
    background: #dcfce7;
    color: #166534;
}

.status-badge.pending {
    background: #fef3c7;
    color: #92400e;
}

.status-badge.documents {
    background: #dbeafe;
    color: #1e40af;
}

.status-badge.other {
    background: #f3f4f6;
    color: #374151;
}

.reservation-actions {
    display: flex;
    gap: 0.5rem;
}

.view-all {
    margin-top: 1.5rem;
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
}

.btn-primary {
    background: #3b82f6;
    color: white;
}

.btn-primary:hover {
    background: #2563eb;
    transform: translateY(-1px);
}

.btn-secondary {
    background: #6b7280;
    color: white;
}

.btn-secondary:hover {
    background: #4b5563;
    transform: translateY(-1px);
}

.btn-small {
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
}

@media (max-width: 768px) {
    .profile-info {
        flex-direction: column;
        text-align: center;
        gap: 1.5rem;
    }
    
    .profile-stats {
        justify-content: center;
    }
    
    .reservation-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.75rem;
    }
    
    .reservation-status {
        margin: 0;
    }
    
    .reservation-actions {
        width: 100%;
        justify-content: flex-end;
    }
}
</style>
{% endblock %} 