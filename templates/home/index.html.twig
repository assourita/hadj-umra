    filter: brightness(1.5) contrast(1.5) !important; /* Plus visible */
}

.logo-text {
    color: #ffffff !important; /* Blanc pur pour plus de contraste */
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    font-weight: 800 !important;
}

/* Corriger les fl√®ches du carousel */
.carousel-nav {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0;
    pointer-events: none; /* Permet de cliquer √† travers */
    z-index: 10;
}

.carousel-btn {
    background: rgba(255, 255, 255, 0.15);
    border: 2px solid rgba(255, 255, 255, 0.4);
    color: white;
    width: 60px;
    height: 60px;
    border-radius:50%;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
    pointer-events: auto; /* Restaure la possibilit√© de cliquer */
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.carousel-btn:hover {
    background: rgba(255, 255, 255, 0.25);
    border-color: rgba(255, 255, 255, 0.6);
    transform: scale(1.1);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
}

.carousel-btn.prev {
    margin-left: 2rem; /* Position sur le bord gauche */
}

.carousel-btn.next {
    margin-right: 2rem; /* Position sur le bord droit */
}

/* Am√©liorer la visibilit√© du texte sur le hero */
.hero-title {
    text-shadow: 0 4px 12px rgba(0, 0, 0, 0.8);
}

.hero-main {
    text-shadow: 0 6px 16px rgba(0, 0, 0, 0.9);
    font-weight: 800;
}

.hero-subtitle {
    text-shadow: 0 3px 8px rgba(0, 0, 0, 0.7);
}

/* Am√©liorer la navigation */
.nav a {
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
    font-weight: 600;
}

.nav a:hover {
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.5);
}
</style>
{% endblock %}

{% block javascripts %}
<script>
let currentSlide = 0;
const slides = [
    '/assets/images/carousel/photos/omra1.webp',
    '/assets/images/carousel/photos/omra2.webp',
    '/assets/images/carousel/photos/omra3.webp',
    '/assets/images/carousel/photos/omra4.webp',
    '/assets/images/carousel/photos/omra5.webp'
];

function changeSlide(direction) {
    currentSlide = (currentSlide + direction + slides.length) % slides.length;
    updateHeroBackground();
}

function updateHeroBackground() {
    const heroBg = document.querySelector('.hero-bg-image');
    if (heroBg) {
        heroBg.src = slides[currentSlide];
    }
}

// Auto-advance slides every 8 seconds
setInterval(() => {
    changeSlide(1);
}, 8000);

// Initialize with first slide
document.addEventListener('DOMContentLoaded', function() {
    updateHeroBackground();
});
</script>
{% endblock %} 