<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Coordonnées par défaut (Bamako, Mali)
    const defaultLat = 12.6392;
    const defaultLng = -8.0029;
    
    // Initialiser la carte
    const map = L.map('map').setView([defaultLat, defaultLng], 13);
    
    // Ajouter la couche de tuiles OpenStreetMap
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© OpenStreetMap contributors'
    }).addTo(map);
    
    // Marqueur pour Dèmè Travel
    const demetravelMarker = L.marker([defaultLat, defaultLng]).addTo(map);
    demetravelMarker.bindPopup(`
        <div style="text-align: center;">
            <h3>🏢 Dèmè Travel</h3>
            <p><strong>Agence de voyage</strong></p>
            <p>123 Avenue de la Paix</p>
            <p>Bamako, Mali</p>
            <p>📞 +223 XX XX XX XX</p>
            <p>✉️ contact@demetravel.com</p>
        </div>
    `);
    
    // Obtenir les informations du serveur
    getServerInfo();
    
    // Fonction pour obtenir les informations du serveur
    async function getServerInfo() {
        try {
            // Obtenir l'IP du serveur
            const response = await fetch('https://api.ipify.org?format=json');
            const data = await response.json();
            const serverIP = data.ip;
            
            document.getElementById('server-ip').textContent = serverIP;
            
            // Obtenir les informations de géolocalisation
            const geoResponse = await fetch(`https://ipapi.co/${serverIP}/json/`);
            const geoData = await geoResponse.json();
            
            if (geoData.latitude && geoData.longitude) {
                // Ajouter un marqueur pour le serveur
                const serverMarker = L.marker([geoData.latitude, geoData.longitude], {
                    icon: L.divIcon({
                        className: 'server-marker',
                        html: '🖥️',
                        iconSize: [30, 30],
                        iconAnchor: [15, 15]
                    })
                }).addTo(map);
                
                serverMarker.bindPopup(`
                    <div style="text-align: center;">
                        <h3>🖥️ Serveur Dèmè Travel</h3>
                        <p><strong>IP :</strong> ${serverIP}</p>
                        <p><strong>Pays :</strong> ${geoData.country_name || 'Inconnu'}</p>
                        <p><strong>Ville :</strong> ${geoData.city || 'Inconnue'}</p>
                        <p><strong>Région :</strong> ${geoData.region || 'Inconnue'}</p>
                    </div>
                `);
                
                // Ajuster la vue pour voir les deux marqueurs
                const group = new L.featureGroup([demetravelMarker, serverMarker]);
                map.fitBounds(group.getBounds().pad(0.1));
                
                // Mettre à jour les informations affichées
                document.getElementById('server-location').textContent = 
                    `${geoData.city || 'Inconnue'}, ${geoData.region || 'Inconnue'}`;
                document.getElementById('server-country').textContent = 
                    geoData.country_name || 'Inconnu';
            } else {
                document.getElementById('server-location').textContent = 'Localisation non disponible';
                document.getElementById('server-country').textContent = 'Pays non disponible';
            }
            
        } catch (error) {
            console.error('Erreur lors de la récupération des informations du serveur:', error);
            document.getElementById('server-ip').textContent = 'Non disponible';
            document.getElementById('server-location').textContent = 'Non disponible';
            document.getElementById('server-country').textContent = 'Non disponible';
        }
    }
});
</script>

