{% extends 'layouts/client_dashboard.html.twig' %}

{% block title %}Documents de R√©servation - Espace Client{% endblock %}

{% block body %}
<div class="page-header">
    <h1>üìÑ Documents requis</h1>
    <p>R√©servation #{{ reservation.codeDossier }} - {{ reservation.depart.package.titre }}</p>
</div>

<div class="documents-content">
    <!-- Informations du voyage -->
    <div class="travel-info">
        <div class="info-card">
            <div class="info-icon">üìÖ</div>
            <div class="info-content">
                <h3>Informations du voyage</h3>
                <p><strong>D√©part :</strong> {{ reservation.depart.dateDepart|date('d/m/Y') }}</p>
                <p><strong>Retour :</strong> {{ reservation.depart.dateRetour|date('d/m/Y') }}</p>
            </div>
        </div>
        
        <div class="info-card">
            <div class="info-icon">‚è∞</div>
            <div class="info-content">
                <h3>Date limite</h3>
                <p class="deadline">{{ reservation.depart.dateDepart|date_modify('-7 days')|date('d/m/Y') }}</p>
            </div>
        </div>
    </div>

    <!-- Documents requis -->
    <div class="documents-section">
        <h2>üìã Documents requis</h2>
        
        {% set providedCount = 0 %}
        {% set requiredCount = 0 %}
        
        {% for type, doc in documentsRequis %}
            {% if doc.obligatoire %}
                {% set requiredCount = requiredCount + 1 %}
                {% if documentsFournis[type] is defined %}
                    {% set providedCount = providedCount + 1 %}
                {% endif %}
            {% endif %}
        {% endfor %}
        
        <div class="documents-list">
            {% for type, doc in documentsRequis %}
                <div class="document-item {{ documentsFournis[type] is defined ? 'provided' : 'missing' }}">
                    <div class="document-info">
                        <div class="document-icon">üìÑ</div>
                        <div class="document-details">
                            <h4>{{ doc.nom }}</h4>
                            <p>{{ doc.description }}</p>
                            {% if doc.obligatoire %}
                                <span class="required-badge">Obligatoire</span>
                            {% else %}
                                <span class="optional-badge">Optionnel</span>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="document-status">
                        {% if documentsFournis[type] is defined %}
                            <span class="status-provided">‚úÖ Fourni</span>
                        {% else %}
                            <span class="status-missing">‚è≥ En attente</span>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
        
        <div class="progress-summary">
            <div class="progress-bar">
                <div class="progress-fill" style="width: {{ requiredCount > 0 ? (providedCount / requiredCount * 100)|round : 0 }}%"></div>
            </div>
            <span class="progress-text">{{ providedCount }}/{{ requiredCount }} documents obligatoires fournis</span>
        </div>
    </div>

    <!-- Actions -->
    <div class="actions-section">
        <a href="{{ path('app_documents_index') }}" class="btn btn-secondary">
            ‚Üê Retour √† mes documents
        </a>
        
        {% if providedCount == requiredCount %}
            <div class="completion-message">
                <p>üéâ Tous les documents obligatoires ont √©t√© fournis !</p>
                <p>Votre r√©servation sera valid√©e par notre √©quipe et vous pourrez proc√©der au paiement.</p>
            </div>
        {% else %}
            <div class="incomplete-message">
                <p>‚ö†Ô∏è Veuillez fournir tous les documents obligatoires avant la date limite.</p>
            </div>
        {% endif %}
    </div>
</div>

<style>
.page-header {
    margin-bottom: 2rem;
}

.page-header h1 {
    margin: 0 0 0.5rem 0;
    color: #1f2937;
    font-size: 2rem;
}

.page-header p {
    margin: 0;
    color: #6b7280;
    font-size: 1.125rem;
}

.documents-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.travel-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
}

.info-card {
    background: white;
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    gap: 1rem;
}

.info-icon {
    font-size: 2rem;
    color: #3b82f6;
}

.info-content h3 {
    margin: 0 0 0.5rem 0;
    color: #1f2937;
    font-size: 1.125rem;
}

.info-content p {
    margin: 0 0 0.25rem 0;
    color: #6b7280;
    font-size: 0.875rem;
}

.deadline {
    font-size: 1.25rem !important;
    font-weight: 700 !important;
    color: #dc2626 !important;
}

.documents-section {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.documents-section h2 {
    margin: 0 0 1.5rem 0;
    color: #1f2937;
    font-size: 1.5rem;
}

.documents-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
}

.document-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
}

.document-item.provided {
    border-color: #10b981;
    background: #f0fdf4;
}

.document-item.missing {
    border-color: #f59e0b;
    background: #fffbeb;
}

.document-info {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.document-icon {
    font-size: 1.5rem;
    color: #6b7280;
}

.document-details h4 {
    margin: 0 0 0.25rem 0;
    color: #1f2937;
    font-size: 1rem;
}

.document-details p {
    margin: 0 0 0.5rem 0;
    color: #6b7280;
    font-size: 0.875rem;
}

.required-badge {
    background: #fee2e2;
    color: #991b1b;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 600;
}

.optional-badge {
    background: #f3f4f6;
    color: #374151;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 600;
}

.document-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.status-provided {
    color: #059669;
    font-weight: 600;
}

.status-missing {
    color: #d97706;
    font-weight: 600;
}

.progress-summary {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
}

.progress-bar {
    width: 100%;
    height: 8px;
    background: #e5e7eb;
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 0.5rem;
}

.progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #3b82f6, #1d4ed8);
    transition: width 0.3s ease;
}

.progress-text {
    font-size: 0.875rem;
    color: #6b7280;
    font-weight: 600;
}

.actions-section {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    text-align: center;
}

.completion-message {
    margin-top: 1.5rem;
    padding: 1.5rem;
    background: #f0fdf4;
    border: 1px solid #bbf7d0;
    border-radius: 0.5rem;
}

.completion-message p {
    margin: 0 0 0.5rem 0;
    color: #166534;
}

.incomplete-message {
    margin-top: 1.5rem;
    padding: 1.5rem;
    background: #fffbeb;
    border: 1px solid #fed7aa;
    border-radius: 0.5rem;
}

.incomplete-message p {
    margin: 0;
    color: #92400e;
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
}

.btn-secondary {
    background: #6b7280;
    color: white;
}

.btn-secondary:hover {
    background: #4b5563;
    transform: translateY(-1px);
}

@media (max-width: 768px) {
    .travel-info {
        grid-template-columns: 1fr;
    }
    
    .document-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }
    
    .document-status {
        align-self: flex-end;
    }
}
</style>
{% endblock %}
