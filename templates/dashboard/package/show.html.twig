{% extends 'base.html.twig' %}

{% block title %}Détails du Package{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Détails du package : {{ package.name }}</h3>
                    <div class="card-tools">
                        <a href="{{ path('dashboard_package_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour à la liste
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5>Informations générales</h5>
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>ID :</strong></td>
                                            <td>{{ package.id }}</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Nom :</strong></td>
                                            <td>{{ package.name }}</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Type :</strong></td>
                                            <td>
                                                <span class="badge badge-{{ package.type == 'hajj' ? 'primary' : (package.type == 'umra' ? 'success' : 'warning') }}">
                                                    {{ package.type|upper }}
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Prix :</strong></td>
                                            <td><strong class="text-primary">{{ package.price|number_format(2, ',', ' ') }} €</strong></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Statut :</strong></td>
                                            <td>
                                                {% if package.isActive %}
                                                    <span class="badge badge-success">Actif</span>
                                                {% else %}
                                                    <span class="badge badge-secondary">Inactif</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Créé le :</strong></td>
                                            <td>{{ package.createdAt|date('d/m/Y à H:i') }}</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Modifié le :</strong></td>
                                            <td>{{ package.updatedAt|date('d/m/Y à H:i') }}</td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    {% if package.image %}
                                        <h5>Image du package</h5>
                                        <img src="{{ asset('uploads/packages/' ~ package.image) }}" 
                                             alt="{{ package.name }}" 
                                             class="img-fluid rounded" 
                                             style="max-width: 100%; height: auto;">
                                    {% else %}
                                        <div class="text-center py-4">
                                            <i class="fas fa-image fa-3x text-muted"></i>
                                            <p class="text-muted mt-2">Aucune image</p>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="mt-4">
                                <h5>Description</h5>
                                <div class="card">
                                    <div class="card-body">
                                        {{ package.description|nl2br }}
                                    </div>
                                </div>
                            </div>

                            {% if package.features and package.features|length > 0 %}
                                <div class="mt-4">
                                    <h5>Fonctionnalités ({{ package.features|length }})</h5>
                                    <div class="row">
                                        {% for feature in package.features %}
                                            <div class="col-md-6">
                                                <div class="card mb-2">
                                                    <div class="card-body py-2">
                                                        <i class="fas fa-check text-success mr-2"></i>
                                                        {{ feature }}
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-cogs"></i> Actions
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a href="{{ path('dashboard_package_edit', {'id': package.id}) }}" 
                                           class="btn btn-warning">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        
                                        <form method="post" action="{{ path('dashboard_package_toggle_status', {'id': package.id}) }}" 
                                              style="display: inline-block;" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir changer le statut de ce package ?')">
                                            <button type="submit" class="btn btn-{{ package.isActive ? 'secondary' : 'success' }} w-100">
                                                <i class="fas fa-{{ package.isActive ? 'pause' : 'play' }}"></i>
                                                {{ package.isActive ? 'Désactiver' : 'Activer' }}
                                            </button>
                                        </form>

                                        <form method="post" action="{{ path('dashboard_package_delete', {'id': package.id}) }}" 
                                              style="display: inline-block;" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce package ? Cette action est irréversible.')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ package.id) }}">
                                            <button type="submit" class="btn btn-danger w-100">
                                                <i class="fas fa-trash"></i> Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <div class="card mt-3">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-info-circle"></i> Informations
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li><small>• Ce package est {{ package.isActive ? 'visible' : 'masqué' }} sur le site</small></li>
                                        <li><small>• Les visiteurs peuvent {{ package.isActive ? 'voir' : 'ne peuvent pas voir' }} ce package</small></li>
                                        <li><small>• Les réservations sont {{ package.isActive ? 'autorisées' : 'désactivées' }}</small></li>
                                        {% if package.features and package.features|length > 0 %}
                                            <li><small>• {{ package.features|length }} fonctionnalité(s) définie(s)</small></li>
                                        {% endif %}
                                    </ul>
                                </div>
                            </div>

                            <div class="card mt-3">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-eye"></i> Aperçu
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <a href="{{ path('app_reservation_package', {'id': package.id}) }}" 
                                       target="_blank" 
                                       class="btn btn-outline-primary btn-sm w-100">
                                        <i class="fas fa-external-link-alt"></i> Voir sur le site
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
