{% extends 'base.html.twig' %}

{% block title %}Modifier {{ news.title }} - Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
{% endblock %}

{% block body %}
<div class="dashboard-container">
    <!-- Sidebar -->
    <div class="dashboard-sidebar">
        <div class="sidebar-header">
            <h3>DƐMƐ Travel</h3>
            <p>Administration</p>
        </div>
        
        <nav class="sidebar-nav">
            <ul>
                <li class="nav-item">
                    <a href="{{ path('dashboard_index') }}">
                        <i class="fa fa-dashboard"></i>
                        <span>Tableau de bord</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('dashboard_package_index') }}">
                        <i class="fa fa-suitcase"></i>
                        <span>Packages</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a href="{{ path('dashboard_news_index') }}">
                        <i class="fa fa-newspaper-o"></i>
                        <span>Actualités</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('dashboard_contact_index') }}">
                        <i class="fa fa-envelope"></i>
                        <span>Messages</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_home') }}" target="_blank">
                        <i class="fa fa-external-link"></i>
                        <span>Voir le site</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="dashboard-main">
        <div class="dashboard-header">
            <div class="header-left">
                <a href="{{ path('dashboard_news_show', {'id': news.id}) }}" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Retour
                </a>
                <h1>Modifier {{ news.title }}</h1>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="content-card">
            {{ form_start(form, {'attr': {'class': 'form'}}) }}
                <div class="form-grid">
                    <div class="form-group">
                        {{ form_label(form.title, 'Titre') }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.isPublished, 'Statut') }}
                        {{ form_widget(form.isPublished, {'attr': {'class': 'form-check'}}) }}
                        {{ form_errors(form.isPublished) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.publishedAt, 'Date de publication') }}
                        {{ form_widget(form.publishedAt, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.publishedAt) }}
                        <small class="form-text">Laissez vide pour publier immédiatement</small>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.content, 'Contenu') }}
                    {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '12'}}) }}
                    {{ form_errors(form.content) }}
                    <small class="form-text">Vous pouvez utiliser du HTML pour formater le contenu</small>
                </div>

                <div class="form-group">
                    {{ form_label(form.imageFile, 'Image') }}
                    {% if news.image %}
                        <div class="current-image">
                            <img src="{{ asset('uploads/news/' ~ news.image) }}" alt="Image actuelle" style="max-width: 200px; height: auto; border-radius: 4px; margin: 10px 0;">
                            <p><small>Image actuelle : {{ news.image }}</small></p>
                        </div>
                    {% endif %}
                    {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.imageFile) }}
                    <small class="form-text">Laissez vide pour conserver l'image actuelle</small>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Enregistrer
                    </button>
                    <a href="{{ path('dashboard_news_show', {'id': news.id}) }}" class="btn btn-secondary">
                        <i class="fa fa-times"></i> Annuler
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<style>
.form-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
}

.current-image {
    margin: 10px 0;
    padding: 10px;
    background-color: #f8f9fa;
    border-radius: 4px;
}

.form-actions {
    display: flex;
    gap: 15px;
    padding-top: 20px;
    border-top: 1px solid #ecf0f1;
}

.header-left {
    display: flex;
    align-items: center;
    gap: 20px;
}

.header-left h1 {
    margin: 0;
}
</style>
{% endblock %}
