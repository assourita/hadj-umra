<script>
document.addEventListener('DOMContentLoaded', function() {
    const roomRadios = document.querySelectorAll('.room-radio');
    const pilgrimsSelect = document.getElementById('nb_pelerins');
    const pricePerPerson = document.getElementById('price-per-person');
    const pilgrimsCount = document.getElementById('pilgrims-count');
    const totalPrice = document.getElementById('total-price');
    
    let selectedPrice = 0;
    
    // Mettre √† jour le prix quand une chambre est s√©lectionn√©e
    roomRadios.forEach(radio => {
        radio.addEventListener('change', function() {
            const roomLabel = this.nextElementSibling;
            const priceText = roomLabel.querySelector('.room-price').textContent;
            selectedPrice = parseInt(priceText.replace(/[^\d]/g, ''));
            updatePriceCalculation();
        });
    });
    
    // Mettre √† jour le prix quand le nombre de p√®lerins change
    pilgrimsSelect.addEventListener('change', function() {
        updatePriceCalculation();
    });
    
    function updatePriceCalculation() {
        const pilgrims = parseInt(pilgrimsSelect.value) || 0;
        const total = selectedPrice * pilgrims;
        
        pricePerPerson.textContent = selectedPrice > 0 ? selectedPrice.toLocaleString() + ' FCFA' : '--';
        pilgrimsCount.textContent = pilgrims > 0 ? pilgrims : '--';
        totalPrice.textContent = total > 0 ? total.toLocaleString() + ' FCFA' : '--';
    }
});
</script>
