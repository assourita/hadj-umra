{% extends 'base.html.twig' %}

{% block title %}Réservation #{{ reservation.id }} - Dèmè Travel{% endblock %}

{% block body %}
<div class="reservation-detail-page">
    <div class="page-header">
        <h1>📋 Réservation #{{ reservation.id }}</h1>
        <p>{{ reservation.depart.package.titre }} - {{ reservation.depart.dateDepart|date('d/m/Y') }}</p>
    </div>

    <div class="reservation-content">
        <div class="reservation-grid">
            <!-- Informations principales -->
            <div class="main-info">
                <div class="status-card">
                    <div class="status-header">
                        <h2>Statut de la réservation</h2>
                        <span class="status-badge {{ reservation.statut }}">
                            {% if reservation.statut == 'en_attente_paiement' %}
                                ⏳ En attente de paiement
                            {% elseif reservation.statut == 'confirme' %}
                                ✅ Confirmée
                            {% elseif reservation.statut == 'annule' %}
                                ❌ Annulée
                            {% elseif reservation.statut == 'complet' %}
                                🎉 Complète
                            {% else %}
                                📝 {{ reservation.statut|title }}
                            {% endif %}
                        </span>
                    </div>
                    
                    <div class="status-timeline">
                        <div class="timeline-item completed">
                            <div class="timeline-icon">✅</div>
                            <div class="timeline-content">
                                <h4>Réservation créée</h4>
                                <p>{{ reservation.createdAt|date('d/m/Y H:i') }}</p>
                            </div>
                        </div>
                        
                        {% if reservation.statut != 'brouillon' %}
                            <div class="timeline-item {{ reservation.statut in ['en_attente_paiement', 'confirme', 'complet'] ? 'completed' : '' }}">
                                <div class="timeline-icon">
                                    {% if reservation.statut in ['en_attente_paiement', 'confirme', 'complet'] %}✅{% else %}⏳{% endif %}
                                </div>
                                <div class="timeline-content">
                                    <h4>Paiement de l'acompte</h4>
                                    <p>30% du montant total</p>
                                </div>
                            </div>
                        {% endif %}
                        
                        {% if reservation.statut in ['confirme', 'complet'] %}
                            <div class="timeline-item completed">
                                <div class="timeline-icon">✅</div>
                                <div class="timeline-content">
                                    <h4>Réservation confirmée</h4>
                                    <p>Visa en cours de traitement</p>
                                </div>
                            </div>
                        {% endif %}
                        
                        {% if reservation.statut == 'complet' %}
                            <div class="timeline-item completed">
                                <div class="timeline-icon">✅</div>
                                <div class="timeline-content">
                                    <h4>Paiement complet</h4>
                                    <p>100% du montant payé</p>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Détails du voyage -->
                <div class="travel-details">
                    <h2>✈️ Détails du voyage</h2>
                    
                    <div class="travel-card">
                        <div class="travel-header">
                                                            <h3>{{ reservation.depart.package.titre }}</h3>
                            <div class="travel-dates">
                                <span class="depart-date">{{ reservation.depart.dateDepart|date('d/m/Y') }}</span>
                                <span class="arrow">→</span>
                                <span class="return-date">{{ reservation.depart.dateRetour|date('d/m/Y') }}</span>
                            </div>
                        </div>
                        
                        <div class="travel-info">
                            <div class="info-grid">
                                <div class="info-item">
                                    <span class="info-icon">🏨</span>
                                    <div class="info-content">
                                        <div class="info-label">Hébergement</div>
                                        <div class="info-value">{{ reservation.typeChambre|title }}</div>
                                    </div>
                                </div>
                                
                                <div class="info-item">
                                    <span class="info-icon">👥</span>
                                    <div class="info-content">
                                        <div class="info-label">Pèlerins</div>
                                        <div class="info-value">{{ reservation.nbPelerins }}</div>
                                    </div>
                                </div>
                                
                                <div class="info-item">
                                    <span class="info-icon">💰</span>
                                    <div class="info-content">
                                        <div class="info-label">Prix total</div>
                                        <div class="info-value">{{ reservation.total|number_format(0, ',', ' ') }} FCFA</div>
                                    </div>
                                </div>
                                
                                <div class="info-item">
                                    <span class="info-icon">📅</span>
                                    <div class="info-content">
                                        <div class="info-label">Durée</div>
                                        <div class="info-value">{{ ((reservation.depart.dateRetour|date('U') - reservation.depart.dateDepart|date('U')) / 86400)|round }} jours</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions et paiement -->
            <div class="actions-section">
                <!-- État du paiement -->
                <div class="payment-status">
                    <h2>💳 État du paiement</h2>
                    
                    <div class="payment-card">
                        <div class="payment-progress">
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: {{ reservation.acompte ? (reservation.acompte / reservation.total * 100) : 0 }}%"></div>
                            </div>
                            <div class="progress-text">
                                <span>{{ reservation.acompte ? (reservation.acompte / reservation.total * 100)|round }}% payé</span>
                                <span>{{ reservation.total|number_format(0, ',', ' ') }} FCFA</span>
                            </div>
                        </div>
                        
                        <div class="payment-breakdown">
                            <div class="payment-item">
                                <span>Acompte (30%) :</span>
                                <span>{{ (reservation.total * 0.3)|number_format(0, ',', ' ') }} FCFA</span>
                            </div>
                            <div class="payment-item">
                                <span>Solde (70%) :</span>
                                <span>{{ (reservation.total * 0.7)|number_format(0, ',', ' ') }} FCFA</span>
                            </div>
                            <div class="payment-item total">
                                <span>Total :</span>
                                <span>{{ reservation.total|number_format(0, ',', ' ') }} FCFA</span>
                            </div>
                        </div>
                        
                        {% if reservation.statut == 'en_attente_paiement' %}
                            <div class="payment-actions">
                                <a href="{{ path('app_reservation_payment', {'id': reservation.id}) }}" class="btn btn-primary">
                                    💳 Payer maintenant
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Actions rapides -->
                <div class="quick-actions">
                    <h2>⚡ Actions rapides</h2>
                    
                    <div class="actions-grid">
                        {% if reservation.statut in ['en_attente_paiement', 'confirme'] %}
                            <a href="{{ path('app_client_documents', {'id': reservation.id}) }}" class="action-card">
                                <div class="action-icon">📄</div>
                                <h3>Documents</h3>
                                <p>Gérer les documents de voyage</p>
                            </a>
                        {% endif %}
                        
                        <a href="{{ path('app_contact') }}" class="action-card">
                            <div class="action-icon">📞</div>
                            <h3>Support</h3>
                            <p>Contacter notre équipe</p>
                        </a>
                        
                        {% if reservation.statut == 'brouillon' %}
                            <a href="{{ path('app_reservation_payment', {'id': reservation.id}) }}" class="action-card">
                                <div class="action-icon">💳</div>
                                <h3>Paiement</h3>
                                <p>Effectuer le paiement</p>
                            </a>
                        {% endif %}
                        
                        <a href="{{ path('app_client_reservations') }}" class="action-card">
                            <div class="action-icon">📋</div>
                            <h3>Mes réservations</h3>
                            <p>Voir toutes mes réservations</p>
                        </a>
                    </div>
                </div>

                <!-- Informations importantes -->
                <div class="important-info">
                    <h2>ℹ️ Informations importantes</h2>
                    
                    <div class="info-list">
                        {% if reservation.statut == 'en_attente_paiement' %}
                            <div class="info-item">
                                <div class="info-icon">⏰</div>
                                <div class="info-content">
                                    <h4>Paiement en attente</h4>
                                    <p>Veuillez effectuer le paiement de l'acompte pour confirmer votre réservation.</p>
                                </div>
                            </div>
                        {% endif %}
                        
                        {% if reservation.statut in ['confirme', 'complet'] %}
                            <div class="info-item">
                                <div class="info-icon">📋</div>
                                <div class="info-content">
                                    <h4>Documents requis</h4>
                                    <p>N'oubliez pas de télécharger vos documents de voyage.</p>
                                </div>
                            </div>
                        {% endif %}
                        
                        <div class="info-item">
                            <div class="info-icon">📧</div>
                            <div class="info-content">
                                <h4>Notifications</h4>
                                <p>Vous recevrez des emails pour les mises à jour importantes.</p>
                            </div>
                        </div>
                        
                        <div class="info-item">
                            <div class="info-icon">📞</div>
                            <div class="info-content">
                                <h4>Support 24/7</h4>
                                <p>Notre équipe est disponible pour vous aider.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Liste des pèlerins -->
        <div class="pilgrims-section">
            <h2>👥 Pèlerins inscrits</h2>
            
            <div class="pilgrims-grid">
                {% for pelerin in reservation.pelerins %}
                    <div class="pilgrim-card">
                        <div class="pilgrim-header">
                            <div class="pilgrim-number">{{ loop.index }}</div>
                            <div class="pilgrim-name">{{ pelerin.prenom }} {{ pelerin.nom }}</div>
                        </div>
                        
                        <div class="pilgrim-details">
                            <div class="detail-item">
                                <span class="detail-label">Date de naissance :</span>
                                <span class="detail-value">{{ pelerin.dateNaissance|date('d/m/Y') }}</span>
                            </div>
                            
                            <div class="detail-item">
                                <span class="detail-label">Sexe :</span>
                                <span class="detail-value">{{ pelerin.sexe == 'M' ? 'Masculin' : 'Féminin' }}</span>
                            </div>
                            
                            <div class="detail-item">
                                <span class="detail-label">Nationalité :</span>
                                <span class="detail-value">{{ pelerin.nationalite }}</span>
                            </div>
                        </div>
                        
                        {% if reservation.statut in ['confirme', 'complet'] %}
                            <div class="pilgrim-documents">
                                <h4>📄 Documents</h4>
                                <div class="document-status">
                                    <span class="status-dot pending"></span>
                                    <span>En attente de téléchargement</span>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

