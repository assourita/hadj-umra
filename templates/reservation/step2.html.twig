}

.summary-item.total {
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--color-primary);
}

.summary-label {
    color: var(--color-gray);
}

.summary-value {
    color: var(--color-primary);
    font-weight: 500;
}

.package-info {
    background: white;
    padding: 2rem;
