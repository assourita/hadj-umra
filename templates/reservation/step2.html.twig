<style>
.reservation-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
}

.page-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    border-radius: 1rem;
}

.page-header h1 {
    margin: 0 0 1rem 0;
    font-size: 2.5rem;
}

