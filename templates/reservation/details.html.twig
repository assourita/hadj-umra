{% extends 'base.html.twig' %}

{% block title %}Détails du Package - {{ package.name }}{% endblock %}

{% block body %}
<div class="package-details" style="background-color: #1a1a1a; min-height: 100vh; padding: 50px 0;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card" style="background-color: #2a2a2a; border: none; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.3);">
                    <div class="card-body p-5">
                        <!-- Image du package -->
                        <div class="text-center mb-4">
                            {% if package.image %}
                                <img src="{{ asset('uploads/packages/' ~ package.image) }}" alt="{{ package.name }}" class="img-fluid rounded" style="max-height: 300px; width: 100%; object-fit: cover;">
                            {% else %}
                                <img src="{{ asset('images/kaba.jpg') }}" alt="{{ package.name }}" class="img-fluid rounded" style="max-height: 300px; width: 100%; object-fit: cover;">
                            {% endif %}
                        </div>

                        <!-- Titre et prix -->
                        <div class="text-center mb-4">
                            <h1 class="text-white mb-2">{{ package.name }}</h1>
                            <div class="price-badge" style="background: linear-gradient(45deg, #fa9e1b, #8d4fff); color: white; padding: 10px 30px; border-radius: 25px; font-size: 24px; font-weight: bold; display: inline-block;">
                                {{ package.price }}€
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <h3 class="text-white mb-3">Description</h3>
                            <p class="text-light" style="line-height: 1.8; font-size: 16px;">
                                {{ package.description|nl2br }}
                            </p>
                        </div>

                        <!-- Caractéristiques -->
                        {% if package.features %}
                        <div class="mb-4">
                            <h3 class="text-white mb-3">Ce qui est inclus</h3>
                            <div class="row">
                                {% for feature in package.features %}
                                <div class="col-md-6 mb-2">
                                    <div class="feature-item" style="display: flex; align-items: center; color: #fa9e1b;">
                                        <i class="fa fa-check-circle mr-2" style="margin-right: 10px; font-size: 18px;"></i>
                                        <span class="text-light">{{ feature }}</span>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}

                        <!-- Informations importantes -->
                        <div class="alert alert-info" style="background-color: #1e3a8a; border: none; color: white;">
                            <h4 class="alert-heading"><i class="fa fa-info-circle"></i> Informations importantes</h4>
                            <ul class="mb-0" style="color: #e5e7eb;">
                                <li>Réservation obligatoire au moins 30 jours à l'avance</li>
                                <li>Passeport valide 6 mois après le retour</li>
                                <li>Vaccins obligatoires à jour</li>
                                <li>Assurance voyage recommandée</li>
                            </ul>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="text-center mt-5">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <a href="{{ path('app_reservation_new', {'packageId': package.id}) }}" class="btn btn-primary btn-lg" style="background: linear-gradient(45deg, #fa9e1b, #8d4fff); border: none; padding: 15px 40px; border-radius: 30px; font-size: 18px; font-weight: bold; text-transform: uppercase; letter-spacing: 1px;">
                                        <i class="fa fa-calendar-check-o mr-2"></i>
                                        Réserver maintenant
                                    </a>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <a href="{{ path('app_home') }}#packages" class="btn btn-outline-light btn-lg" style="border: 2px solid #fa9e1b; color: #fa9e1b; padding: 15px 40px; border-radius: 30px; font-size: 18px; font-weight: bold; text-transform: uppercase; letter-spacing: 1px;">
                                        <i class="fa fa-arrow-left mr-2"></i>
                                        Retour aux packages
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Contact rapide -->
                        <div class="text-center mt-4">
                            <p class="text-light mb-2">Des questions ? Contactez-nous directement :</p>
                            <div class="contact-info">
                                <a href="tel:+33123456789" class="btn btn-sm btn-outline-light mr-2" style="border-color: #fa9e1b; color: #fa9e1b;">
                                    <i class="fa fa-phone"></i> +33 1 23 45 67 89
                                </a>
                                <a href="mailto:contact@demetravel.com" class="btn btn-sm btn-outline-light" style="border-color: #fa9e1b; color: #fa9e1b;">
                                    <i class="fa fa-envelope"></i> contact@demetravel.com
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.package-details {
    background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
}

.card {
    transition: transform 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
}

.price-badge {
    box-shadow: 0 5px 15px rgba(250, 158, 27, 0.3);
}

.feature-item {
    transition: all 0.3s ease;
}

.feature-item:hover {
    transform: translateX(5px);
}

.btn {
    transition: all 0.3s ease;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
}

.contact-info a {
    transition: all 0.3s ease;
}

.contact-info a:hover {
    background-color: #fa9e1b !important;
    border-color: #fa9e1b !important;
    color: white !important;
}
</style>
{% endblock %}
